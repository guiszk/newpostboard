<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0, shrink-to-fit=no">
    <title>postboard</title>
    <link rel="stylesheet" href="assets/bootstrap/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Maven+Pro">
    <link rel="stylesheet" href="assets/css/Footer-Clean.css">
    <link rel="stylesheet" href="assets/css/styles.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/animate.css/4.1.1/animate.min.css">
</head>

<body style="background: rgb(255,245,0);">
    <nav class="navbar navbar-light navbar-expand-md fixed-top" style="background: rgba(255,245,0, 0.8);">
        <div class="container-fluid"><a class="navbar-brand" href="#">postboard</a><button data-toggle="collapse" class="navbar-toggler" data-target="#navcol-1"><span class="sr-only">Toggle navigation</span><span class="navbar-toggler-icon"></span></button>
            <div class="collapse navbar-collapse d-lg-flex justify-content-lg-end" id="navcol-1">
                <ul class="navbar-nav">
                    <li class="nav-item"><a class="nav-link" href="#" onclick="posttoggle('postdiv');">post</a></li>
                    <li class="nav-item"><a class="nav-link" href="#">search</a></li>
                    <li class="nav-item"><a class="nav-link" href="#" onclick="posttoggle('aboutdiv');">about</a></li>
                </ul>
            </div>
        </div>
    </nav>

    <div id='postdiv' class='overlay' style='display: none;'>
        <div class="postitem">
            <div>
                <button class="exitbutton" onclick="posttoggle('postdiv');">×</button>
            </div>

            <form action="/post" method="POST">
                <div class="content" style="padding: 0;">
                    <input name="usr" class="userinput" placeholder="user" maxlength="17" value=""></input>
                    <br>
                    <textarea name="content" class="textinput" placeholder="post" value=""></textarea>
                </div>
                <button type="submit" value="submit" class="postbutton" onclick="inputcheck();">&rarr;</button>
            </form>
        </div>
    </div>

    <div id='aboutdiv' class='overlay' style='display: none;'>
        <div class="postitem" style="padding-bottom: 5px;">
            <div>
                <button class="exitbutton" onclick="posttoggle('aboutdiv');">×</button>
            </div>

            <p>Created by guiszk
                <a class="nav-link" href="https://guiszk.github.io">website</a>
                <a class="nav-link" href="https://github.com/guiszk">github</a>
            </p>
        </div>
    </div>

    <div class="masonry-wrapper" style="margin-top: 80px;">
        <div class="masonry">
            <% posts.forEach((post) => { %>
                <div class="item" style="font-family: 'Maven Pro', sans-serif;">
                    <div class="content"><strong style="display: inline-block"><%= post.likes %></strong><strong style="float: right"><%= post.usr %></strong>
                        <p><%= post.content %></p>
                    </div>
                    <div class="vote">
                        <form action="/vote" method="POST">
                            <input type="hidden" type="text" value="1" name="action">
                            <input type="hidden" type="text" value="<%= post.id %>" name="id">
                            <button type="submit" value="submit" class="up">&uarr;</button>
                        </form>
                        <form action="/vote" method="POST" style="float:right;">
                            <input type="hidden" type="text" value="0" name="action">
                            <input type="hidden" type="text" value="<%= post.id %>" name="id">
                            <button type="submit" value="submit" class="down">&darr;</button>
                        </form>
                    </div>

                    <!--<button class="btn btn-primary up" type="button" style="display: inline-block">↑</button><button class="btn btn-primary down" type="button" style="display: inline-block">↓</button>-->
                </div>
            <% }) %>
        </div>
    </div>
    <script src="assets/js/jquery.min.js"></script>
    <script src="assets/bootstrap/js/bootstrap.min.js"></script>
    <script src="assets/js/masonry.js"></script>
    <script src="assets/js/scripts.js"></script>
</body>

</html>
